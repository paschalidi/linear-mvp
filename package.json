{
  "name": "task-board-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "cd client && npm install",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "docker-compose up",
    "client:dev": "cd client && npm run dev",
    "server:down": "docker-compose down",
    "test": "concurrently \"npm run client:test\" \"npm run server:test\"",
    "client:test": "cd client && npm run test",
    "server:test": "cd server && npm run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
